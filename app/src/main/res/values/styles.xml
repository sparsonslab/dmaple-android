<resources>


    <!-- WARNING MESSAGE DIALOG -->
    <style name="warning_dialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:titleTextAppearance">@font/blinker_light</item>
        <item name="android:windowTitleSize">@dimen/normal_text_size</item>
        <item name="android:textAppearance">@font/montserrat_light</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="buttonBarNegativeButtonStyle">@style/dialog_button_negative</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialog_button_positive</item>
        <!-- ... lists -->
        <item name="android:dividerHeight">5dp</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
    </style>
    <style name="dialog_button_negative">
        <item name="android:backgroundTint">#d6d4d4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>
    <style name="dialog_button_positive">
        <item name="android:backgroundTint">#d6d4d4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>
    <!-- ... message text style -->
    <style name="TextAppearance.AppCompat.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@font/montserrat_light</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>


</resources>
