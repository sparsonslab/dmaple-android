<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.scepticalphysiologist.dmaple.ui.Recorder">


    <com.scepticalphysiologist.dmaple.ui.camera.MapView
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="@color/teal_200">
    </com.scepticalphysiologist.dmaple.ui.camera.MapView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="40dp"
        android:layout_height="match_parent">


        <SeekBar
            android:id="@+id/seeker"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:rotation="270"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/switch2">

        </SeekBar>


        <ImageButton
            android:id="@+id/switch2"
            android:src="@drawable/play_arrow"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent">
        </ImageButton>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/camera_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_margin="10dp"
        android:textColor="#ff0000"
        android:text="start"
        android:textSize="22sp">
    </TextView>

    <com.scepticalphysiologist.dmaple.ui.camera.MappingFieldOfView
        android:id="@+id/camera_and_roi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.scepticalphysiologist.dmaple.ui.camera.MappingFieldOfView>


    <ImageButton
        android:id="@+id/record_button"
        android:src="@drawable/play_arrow"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="20px">
    </ImageButton>


</FrameLayout>
